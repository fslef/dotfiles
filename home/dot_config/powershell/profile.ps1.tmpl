# Import aliases from Chezmoi data
$aliasesScript = Join-Path $HOME ".config/powershell/import-aliases.ps1"
if (Test-Path $aliasesScript) {
	. $aliasesScript
}

# Initialize starship prompt
if (Get-Command starship -ErrorAction SilentlyContinue) {
	Invoke-Expression (&starship init powershell)
}

# Set default location
$defaultRepoDir = Join-Path $HOME "gitrepos"
if (Test-Path $defaultRepoDir) {
	Set-Location $defaultRepoDir
}