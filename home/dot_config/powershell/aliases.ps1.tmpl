        [Parameter(Mandatory = $true)][string]$Name,
        [Parameter(Mandatory = $true)][string]$Command
    )

    if ($Command -notmatch '\s') {
        Set-Alias -Name $Name -Value $Command -Scope Global -Force
        return
    }

    $escaped = $Command -replace "'", "''"

    $functionBody = @"
param(
    [Parameter(ValueFromRemainingArguments=`$true)]
    [string[]]`$Args
)

`$cmd = '$escaped'
if (`$Args.Count -gt 0) {
    try {
        `$quotedArgs = `$Args | ForEach-Object { [System.Management.Automation.Language.CodeGeneration]::QuoteArgument(`$_) }
        `$cmd = `$cmd + ' ' + (`$quotedArgs -join ' ')
    } catch {
        `$cmd = `$cmd + ' ' + (`$Args -join ' ')
    }
}

Invoke-Expression `$cmd
"@

    Set-Item -Path "Function:$Name" -Value ([scriptblock]::Create($functionBody)) -Force
}

