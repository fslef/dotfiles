#!/usr/bin/env bash

set -euo pipefail

{{ if eq .chezmoi.os "darwin" }}

if ! command -v brew >/dev/null 2>&1; then
    if [[ -x /opt/homebrew/bin/brew ]]; then
        eval "$(/opt/homebrew/bin/brew shellenv)"
    elif [[ -x /usr/local/bin/brew ]]; then
        eval "$(/usr/local/bin/brew shellenv)"
    fi
fi

if ! command -v brew >/dev/null 2>&1; then
    exit 0
fi

brew_has_package() {
    local pkg="$1"
    brew list --formula --versions "$pkg" >/dev/null 2>&1 && return 0
    brew list --cask --versions "$pkg" >/dev/null 2>&1 && return 0
    return 1
}

did_print_header=false
{{ range $package := .packages.homebrew.to_remove }}
if brew_has_package {{ $package | quote }}; then
    if [[ "$did_print_header" == "false" ]]; then
        echo
        echo -e "\033[0;36mRemoving obsolete Homebrew packages\033[0m"
        echo -e "\033[0;36m-----------------------------------\033[0m"
        did_print_header=true
    fi
    brew uninstall {{ $package | quote }} || true
fi
{{ end }}

{{ end }}


