{{- if eq .chezmoi.os "darwin" -}}
#!/usr/bin/env bash
set -e

# https://docs.brew.sh/Manpage#environment
export HOMEBREW_CASK_OPTS="--appdir=${HOME}/Applications --fontdir=/Library/Fonts --no-quarantine"
export HOMEBREW_UPGRADE_GREEDY=1
export HOMEBREW_UPGRADE_GREEDY_CASKS=1
export HOMEBREW_NO_ANALYTICS=1

echo
echo -e "\033[0;36mHomebrew: Update, Install & Cleanup\033[0m"
echo -e "\033[0;36m====================================\033[0m"
echo

# Update Homebrew first, then install packages with upgrade and cleanup
# See: https://docs.brew.sh/Manpage#bundle-subcommand
brew update
brew bundle install \
  --file=/dev/stdin \
  --upgrade \
  --cleanup \
  <<EOF
