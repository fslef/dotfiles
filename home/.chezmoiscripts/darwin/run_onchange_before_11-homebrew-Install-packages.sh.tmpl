cask {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
EOF

echo
echo -e "\033[0;36mAudit: Direct dependencies (unmanaged packages)\033[0m"
echo -e "\033[0;36m----------------------------------------------\033[0m"
echo
brew leaves

echo
echo -e "\033[0;32mâœ“ Homebrew updated, installed and cleaned\033[0m"
