tap {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .docker_computer }}
{{ range .packages.homebrew.docker_computer.tap -}}
{{ if ne . "" -}}
tap {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ range .packages.homebrew.common.formulae -}}
{{ if ne . "" -}}
brew {{ . | quote }}
{{ end -}}
{{ end -}}
{{ if .personal_computer }}
{{ range .packages.homebrew.personal_computer.formulae -}}
{{ if ne . "" -}}
brew {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
