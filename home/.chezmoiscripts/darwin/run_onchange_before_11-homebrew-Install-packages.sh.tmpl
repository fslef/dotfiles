{{- if eq .chezmoi.os "darwin" -}}
#!/usr/bin/env bash

# https://docs.brew.sh/Manpage#environment
export HOMEBREW_CASK_OPTS="--appdir=${HOME}/Applications --fontdir=/Library/Fonts --no-quarantine"
export HOMEBREW_UPGRADE_GREEDY=1
export HOMEBREW_UPGRADE_GREEDY_CASKS=1
export HOMEBREW_NO_ANALYTICS=1

echo
echo -e "\033[0;36mHomebrew: Update, Install & Cleanup\033[0m"
echo -e "\033[0;36m====================================\033[0m"
echo

# Update Homebrew first, then install packages with cleanup
# See: https://docs.brew.sh/Manpage#bundle-subcommand
# Note: --upgrade flag removed as upgrades are handled separately by run_before_14 script
# Using --no-upgrade to only install missing packages, preventing download failures on upgrade attempts
# Not using 'set -e' to allow script to continue even if some cask downloads fail
brew update
brew bundle install \
  --file=/dev/stdin \
  --no-upgrade \
  --cleanup \
  <<EOF
{{ range .packages.homebrew.common.tap -}}
{{ if ne . "" -}}
tap {{ . | quote }}
{{ end -}}
{{ end -}}
{{ if .personal_computer }}
{{ range .packages.homebrew.personal_computer.tap -}}
{{ if ne . "" -}}
tap {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .work_computer }}
{{ range .packages.homebrew.work_computer.tap -}}
{{ if ne . "" -}}
tap {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .dev_computer }}
{{ range .packages.homebrew.dev_computer.tap -}}
{{ if ne . "" -}}
tap {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .docker_computer }}
{{ range .packages.homebrew.docker_computer.tap -}}
{{ if ne . "" -}}
tap {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ range .packages.homebrew.common.formulae -}}
{{ if ne . "" -}}
brew {{ . | quote }}
{{ end -}}
{{ end -}}
{{ if .personal_computer }}
{{ range .packages.homebrew.personal_computer.formulae -}}
{{ if ne . "" -}}
brew {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .work_computer }}
{{ range .packages.homebrew.work_computer.formulae -}}
{{ if ne . "" -}}
brew {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .dev_computer }}
{{ range .packages.homebrew.dev_computer.formulae -}}
{{ if ne . "" -}}
brew {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .docker_computer }}
{{ range .packages.homebrew.docker_computer.formulae -}}
{{ if ne . "" -}}
brew {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ range .packages.homebrew.common.casks -}}
{{ if ne . "" -}}
cask {{ . | quote }}
{{ end -}}
{{ end -}}
{{ if .personal_computer }}
{{ range .packages.homebrew.personal_computer.casks -}}
{{ if ne . "" -}}
cask {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .work_computer }}
{{ range .packages.homebrew.work_computer.casks -}}
{{ if ne . "" -}}
cask {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .dev_computer }}
{{ range .packages.homebrew.dev_computer.casks -}}
{{ if ne . "" -}}
cask {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
{{ if .docker_computer }}
{{ range .packages.homebrew.docker_computer.casks -}}
{{ if ne . "" -}}
cask {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
EOF
BREW_BUNDLE_EXIT_CODE=$?

if [ $BREW_BUNDLE_EXIT_CODE -eq 0 ]; then
  echo
  echo -e "\033[0;32m✓ All packages installed successfully\033[0m"
  echo
else
  echo
  echo -e "\033[0;33m⚠ Some packages failed to install (likely due to download issues)\033[0m"
  echo -e "\033[0;33m  Run 'chezmoi apply' again later to retry failed packages\033[0m"
  echo
fi

echo
echo -e "\033[0;36mAudit: Direct dependencies (unmanaged packages)\033[0m"
echo -e "\033[0;36m----------------------------------------------\033[0m"
echo
brew leaves

echo
echo -e "\033[0;32m✓ Homebrew updated, installed and cleaned\033[0m"
echo

{{- end }}
