#!/bin/bash

set -eufo pipefail

# Update Homebrew first
Echo ""
Echo "--Updating Homebrew--"
brew update
Echo ""
Echo "--Adding azure/bicep tap--"
brew tap azure/bicep

# Install This anytime
{{ $brews := list
     "zsh"
     "spaceship"
     "zsh-autosuggestions"
     "zsh-syntax-highlighting"
     "git"
     "chezmoi"
     "bitwarden-cli"
     "oh-my-posh"
     "terraform"
     "bicep"
     "coreutils"
     "mas"
     "zsh-you-should-use"
     "azure-cli" -}}
{{ $casks := list
     "appcleaner"
     "git-credential-manager"
     "docker"
     "iterm2"
     "cheatsheet"
     "bitwarden"
     "visual-studio-code"
     "unnaturalscrollwheels"
     "qmk-toolbox"
     "unclack
     "powershell"
     "postman"
     "obsidian"
     "signal"
     "microsoft-edge"
     "tor-browser"
     "raycast"
     "tower"
     "via"
     "snagit"
     "drawio"
     "adobe-acrobat-reader" -}}

# Install This on Personal
{{ if .personal -}}
{{   $casks = concat $casks (list
       "microsoft-auto-update"
       "microsoft-word"
       "microsoft-excel"
       "microsoft-powerpoint"
       "qobuz"
       "signal"
       "whatsapp") -}}
{{ end -}}

# Install This on Work
{{ if .work -}}
{{   $casks = concat $casks (list
       "azure-data-studio") -}}
{{ end -}}

Echo ""
Echo "--Installing Brew Bundle--"
brew bundle --force cleanup --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF


# Install Apps from Mac App Store using mas CLI
Echo ""
Echo "--Installing Mac OS app store apps--"
mas install 1268962404
