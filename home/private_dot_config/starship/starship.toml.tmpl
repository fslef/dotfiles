{{- if eq .chezmoi.os "darwin" -}}
# Get editor completions based on the config schema
"$schema" = 'https://starship.rs/config-schema.json'

# Inserts a blank line between shell prompts

format = """
[](#1d2433)\
$os\
$username\
[](bg:#ef6b73 fg:#1d2433)\
$directory\
[](fg:#ef6b73 bg:#ffae57)\
$git_branch\
$git_status\
[](fg:#ffae57 bg:#5ccfe6)\
$c\
$golang\
$java\
$nodejs\
$rust\
$scala\
[](fg:#5ccfe6 bg:#bae67e)\
$docker_context\
[](fg:#bae67e bg:#6679a4)\
$time\
[ ](fg:#6679a4)\
"""

# Disable the blank line at the start of the prompt
add_newline = false

[username]
show_always = true
style_user = "bg:#1d2433"
style_root = "bg:#1d2433"
format = '[$user ]($style)'
disabled = false

[os]
style = "bg:#1d2433"
disabled = true

[directory]
style = "bg:#ef6b73"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "

[c]
symbol = " "
style = "bg:#5ccfe6"
format = '[ $symbol ($version) ]($style)'

[docker_context]
symbol = " "
style = "bg:#bae67e"
format = '[ $symbol $context ]($style)'

[git_branch]
symbol = ""
style = "bg:#ffae57"
format = '[ $symbol $branch ]($style)'

[git_status]
style = "bg:#ffae57"
format = '[$all_status$ahead_behind ]($style)'

[golang]
symbol = " "
style = "bg:#5ccfe6"
format = '[ $symbol ($version) ]($style)'

[java]
symbol = " "
style = "bg:#5ccfe6"
format = '[ $symbol ($version) ]($style)'

[nodejs]
symbol = ""
style = "bg:#5ccfe6"
format = '[ $symbol ($version) ]($style)'

[rust]
symbol = ""
style = "bg:#5ccfe6"
format = '[ $symbol ($version) ]($style)'

[scala]
symbol = " "
style = "bg:#5ccfe6"
format = '[ $symbol ($version) ]($style)'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "bg:#6679a4"
format = '[ ♥ $time ]($style)'



{{- end -}}
